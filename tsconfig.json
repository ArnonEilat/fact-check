{
  "compilerOptions": {
    "target": "es2023",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "chrome",
      "@types/dom-chromium-ai",
      "@types/chrome"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}