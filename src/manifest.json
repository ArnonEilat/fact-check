{
  "manifest_version": 3,
  "name": "Fact Checker",
  "description": "A chrome extension to fact check the content of the page using the chrome AI API",
  "minimum_chrome_version": "131",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_title": "Click to open fact check panel",
    "default_icon": "icon-34.png"
  },
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "permissions": ["sidePanel", "scripting", "activeTab"],
  "icons": {
    "24": "icon-24.png",
    "32": "icon-32.png",
    "34": "icon-34.png",
    "48": "icon-48.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "host_permissions": ["https://*/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "contentScript.bundle.js",
        "contentScraper.bundle.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
